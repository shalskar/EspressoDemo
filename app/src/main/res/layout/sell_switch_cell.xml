<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:clickable="true"
    android:padding="16dp">

    <ImageView
        android:id="@+id/icon_imageview"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="32dp"
        android:alpha="54"/>

    <TextView
        android:id="@+id/primary_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@+id/icon_imageview"
        android:layout_toRightOf="@+id/icon_imageview"
        android:maxLines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/text_primary_dark"
        tools:text="4WD"/>

    <TextView
        android:id="@+id/secondary_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_toEndOf="@+id/icon_imageview"
        android:layout_toRightOf="@+id/icon_imageview"
        android:layout_toLeftOf="@+id/switchcompat"
        android:layout_toStartOf="@+id/switchcompat"
        android:layout_below="@+id/primary_textview"
        android:maxLines="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:textColor="@color/text_secondary_dark"
        android:visibility="gone"
        tools:text="4WD"/>

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/switchcompat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:checked="false"/>

</RelativeLayout>